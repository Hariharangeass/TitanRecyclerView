<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:listViewAttr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.youzan.titan.component.ProgressWheel
        android:id="@+id/drop_down_list_footer_progress_bar"
        style="@style/drop_down_list_footer_progress_bar_style"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:barWidth="2dp"
        listViewAttr:barColor="@color/progress_bar_color"
        listViewAttr:progressIndeterminate="true" />

</RelativeLayout>